check host node_web_app_<%= @application_name %> with address 127.0.0.1:$APP_PORT
  start program = "/bin/bash -c 'cd <%= @deploy[:deploy_to] %>/current ; source <%= @deploy[:deploy_to] %>/shared/app.env ; /usr/bin/env PORT=$APP_PORT NODE_PATH=<%= @deploy[:deploy_to] %>/current/node_modules:<%= @deploy[:deploy_to] %>/current /usr/local/bin/node <%= @monitored_script %> 2>> <%= @deploy[:deploy_to]%>/shared/log/node.stderr.log 1>> <%= @deploy[:deploy_to]%>/shared/log/node.stdout.log'"
  stop program = "/usr/bin/pkill -f 'node <%= @monitored_script %>'"
  <% if @deploy[:ssl_support] -%>
  if failed port $APP_PORT type TCPSSL protocol HTTP
  <% else -%>
  if failed port $APP_PORT protocol HTTP
  <% end -%>
    request /
    with timeout 10 seconds
    then restart